<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <aspNetCore processPath="dotnet"
                  arguments=".\Backendapi.dll"
                  stdoutLogEnabled="true"
                  stdoutLogFile=".\logs\stdout"
                  hostingModel="inprocess"
                  rapidFailsPerMinute="10">
        <environmentVariables>
          <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
          <environmentVariable name="ASPNETCORE_DETAILED_ERRORS" value="1" />
          <environmentVariable name="ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS" value="true" />
          <environmentVariable name="ASPNETCORE_LOGGING__CONSOLE__FORMAT" value="json" />
          <environmentVariable name="ASPNETCORE_LOGGING__CONSOLE__INCLUDE_SCOPES" value="true" />
          <environmentVariable name="ASPNETCORE_LOGGING__CONSOLE__LOGLEVEL__DEFAULT" value="Information" />
          <environmentVariable name="ASPNETCORE_LOGGING__CONSOLE__LOGLEVEL__MICROSOFT" value="Warning" />
        </environmentVariables>
      </aspNetCore>
      <security>
        <requestFiltering>
          <requestLimits maxAllowedContentLength="30000000" />
        </requestFiltering>
      </security>
    </system.webServer>
  </location>
</configuration> 